| iron_mg=3.19
| magnesium_mg=126
| phosphorus_mg=288
| potassium_mg=363
| sodium_mg=2
| zinc_mg=2.65
| manganese_mg=3.985
| thiamin_mg=0.383
| riboflavin_mg=0.115
| niacin_mg=5.464
